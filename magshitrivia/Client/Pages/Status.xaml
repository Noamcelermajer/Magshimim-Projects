        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Status" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="background.png"
                AlignmentY="Center" AlignmentX="Center"/>
        </Grid.Background>

        <Label Content="Label" Name="Stats" Height="258" Margin="113,0,113,77" VerticalAlignment="Bottom" FontFamily="Levenim MT" FontSize="24" Background="White" Foreground="Black"/>
        <Button local:CornerRadiusSetter.CornerRadius="12" Content="Back To Menu" Margin="0,0,336,10" Name ="ExitGame" BorderThickness="0" Background="White" Foreground="Black" FontSize="16" FontFamily="MV Boli" Click="Back_Click" BorderBrush="White" HorizontalAlignment="Right" Width="120" Height="49" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
